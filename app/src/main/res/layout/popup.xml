<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="24dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:contentPaddingBottom="20dp"
        app:contentPaddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            tools:ignore="UselessLeaf">

            <TextView
                android:id="@+id/add_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:maxLines="1"
                android:text="Add Item"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/baby_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_item_title"
                android:focusableInTouchMode="false"
                android:hint="Enter Item"
                android:maxLines="1"
                android:selectAllOnFocus="false"
                android:textColorHighlight="#FFEB3B"
                android:textColorHint="#7A7575"></EditText>

            <EditText
                android:id="@+id/itemQunatity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/baby_item"
                android:focusableInTouchMode="false"
                android:hint="Quantity"
                android:inputType="number"
                android:maxLines="1"
                android:selectAllOnFocus="false"
                android:textColorHighlight="#FFEB3B"
                android:textColorHint="#7A7575"></EditText>

            <EditText
                android:id="@+id/item_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemQunatity"
                android:focusableInTouchMode="false"
                android:hint="Color"
                android:maxLines="1"
                android:selectAllOnFocus="false"
                android:textColorHighlight="#FFEB3B"
                android:textColorHint="#7A7575"></EditText>

            <EditText
                android:id="@+id/item_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_color"
                android:focusableInTouchMode="false"
                android:hint="Size"
                android:maxLines="1"
                android:selectAllOnFocus="false"
                android:textColorHighlight="#FFEB3B"
                android:textColorHint="#7A7575"></EditText>

            <Button
                android:id="@+id/add_item_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_size"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#FFEB3B"
                android:text="Save"
                android:textColor="#000000"></Button>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>