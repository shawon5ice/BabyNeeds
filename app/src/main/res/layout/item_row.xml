<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#FFEB3B"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_nameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Name: Diaper"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_colorID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_nameId"
                android:text="Color: red"
                android:textColor="#222121"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_sizeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_colorID"
                android:text="Size: small"
                android:textColor="#222121"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_quantityId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_sizeId"
                android:text="Quantity: 20 pieces"
                android:textColor="#222121"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_added_dateID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_quantityId"
                android:text="Added in 20 july 2020"
                android:textColor="#222121"
                android:textSize="18sp" />

            <Button
                android:id="@+id/delete_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/item_nameId"
                android:layout_alignParentRight="true"
                android:background="@drawable/delete_foreground" />

            <Button
                android:id="@+id/edit_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/delete_id"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_foreground" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>